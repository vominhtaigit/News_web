<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Latest News</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card-footer {
            background-color: transparent;
            border-top: 1px solid rgba(0, 0, 0, .125);
            padding: 0.75rem 1.25rem;
        }
        
        .author-date {
            font-size: 0.875rem;
            color: #6c757d;
        }
        
        .read-more {
            font-size: 0.875rem;
        }
        
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        
        .card-category {
            position: absolute;
            top: 10px;
            left: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 3px;
            font-size: 0.8rem;
        }
        
        .card-text {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }
        
        .stats {
            font-size: 0.8rem;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
        <main class="container py-5">
            <section class="row justify-content-center">
                <div class="col-md-10">
                    <h2 class="text-center mb-4">Latest News</h2>
                    <% if (news && news.length > 0) { %>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% news.forEach(article => { %>
                                <div class="col">
                                    <div class="card h-100 shadow-sm">
                                        <% if (article.image) { %>
                                            <img src="<%= article.image %>" class="card-img-top" alt="<%= article.title %>">
                                            <% } %>

                                                <div class="card-body">
                                                    <h2 class="card-title h5 mb-2">
                                                        <a href="/news/<%= article._id %>" class="text-decoration-none text-dark">
                                                            <%= article.title %>
                                                        </a>
                                                    </h2>
                                                    <div class="meta-info mb-3">
                                                        <small class="text-muted">
                                                    
                                                   
             
                                                    <span class="mx-2">â€¢</span>
                                                    <i class="far fa-clock me-2"></i>
                                                    <%= new Date(article.createdAt).toLocaleDateString() %>
                                                </small>
                                                    </div>
                                                    <p class="card-text text-muted">
                                                        <%= article.summary?.substring(0, 100) || article.content?.substring(0, 100) %>...
                                                    </p>
                                                    <div class="d-flex justify-content-between align-items-center mt-3">

                                                        <a href="/news/<%= article._id %>" class="btn btn-primary btn-sm">
                                                    Read More <i class="fas fa-arrow-right ms-1"></i>
                                                </a>
                                                    </div>
                                                </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <div class="alert alert-info text-center">
                                No news available at the moment.
                            </div>
                            <% } %>
                </div>
            </section>
        </main>
        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    var dropdownElementList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'))
                    var dropdownList = dropdownElementList.map(function(dropdownToggleEl) {
                        return new bootstrap.Dropdown(dropdownToggleEl)
                    });
                });
            </script>
</body>

</html>