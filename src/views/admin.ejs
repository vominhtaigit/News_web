<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>News Management</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% news.forEach(item => { %>
                    <tr>
                        <td><%= item.title %></td>
                        <td><%= item.category ? item.category.name : 'N/A' %></td>
                        <td><%= new Date(item.createdAt).toLocaleDateString() %></td>
                        <td>
                            <a href="/news/edit/<%= item._id %>" class="btn btn-primary btn-sm">Edit</a>
                            <button class="btn btn-warning btn-sm" onclick="toggleDisable('<%= item._id %>')">
                                <%= item.disabled ? 'Enable' : 'Disable' %>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2 class="mt-5">Categories Management</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.name %></td>
                        <td>
                            <a href="/categories/edit/<%= category._id %>" class="btn btn-primary btn-sm">Edit</a>
                            <button class="btn btn-warning btn-sm" onclick="toggleDisableCategory('<%= category._id %>')">
                                <%= category.disabled ? 'Enable' : 'Disable' %>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        async function toggleDisable(id) {
            try {
                const response = await fetch(`/news/${id}/toggle-disable`, {
                    method: 'POST'
                });
                if (response.ok) {
                    window.location.reload();
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function toggleDisableCategory(id) {
            try {
                const response = await fetch(`/categories/${id}/toggle-disable`, {
                    method: 'POST'
                });
                if (response.ok) {
                    window.location.reload();
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
    </script>
</body>
</html>
